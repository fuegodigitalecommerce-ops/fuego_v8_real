{
  "version": 2,
  "builds": [
    { "src": "pages/**/*.js", "use": "@vercel/node" },
    { "src": "pages/**/*.jsx", "use": "@vercel/node" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/pages/index.jsx" }
  ]
}
